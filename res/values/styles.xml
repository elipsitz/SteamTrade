<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:buttonStyle">@style/MaterialStyleButton</item>-->
        <!-- <item name="android:imageButtonStyle">@style/MaterialStyleImageButton</item>-->
        <item name="android:spinnerStyle">@style/CustomSpinner</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="MaterialStyleImageButton" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CustomSpinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:minHeight">48sp</item>
        <!--<item name="android:background">#4C4C4C</item>-->
    </style>

</resources>
